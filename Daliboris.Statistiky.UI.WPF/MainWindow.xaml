<r:RibbonWindow x:Class="Daliboris.Statistiky.UI.WPF.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:r="clr-namespace:Microsoft.Windows.Controls.Ribbon;assembly=RibbonControlsLibrary"
		xmlns:p="clr-namespace:Daliboris.Statistiky.UI.WPF;assembly=Daliboris.Statistiky.UI.WPF.Prehledy"
		Title="Přehled statistik"
		x:Name="RibbonWindow"
		Width="640" Height="480">

	<Grid x:Name="LayoutRoot">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<r:Ribbon x:Name="rbnPasKaret" SelectionChanged="rbnPasKaret_SelectionChanged">
			<!--<ribbon:Ribbon.ApplicationMenu>
				<ribbon:RibbonApplicationMenu SmallImageSource="Images\Brus.png">
					<ribbon:RibbonApplicationMenuItem Header="Hello _Ribbon"
													  x:Name="MenuItem1"
													  ImageSource="Images\Brus.png"/>
				</ribbon:RibbonApplicationMenu>
			</ribbon:Ribbon.ApplicationMenu>-->
			<r:RibbonTab x:Name="TabPrehledy" Header="Prohlížení">
				<r:RibbonGroup x:Name="GrpSoubor" Header="Soubor">
					<r:RibbonButton x:Name="BtnOtevrit" LargeImageSource="Images\Otevrit_souboru_32x32.png" Label="Otevřít" Click="BtnOtevrit_Click" />
					<r:RibbonButton x:Name="BtnTabPrehledyVytvorit" LargeImageSource="Images\Novy_prehled_32x32.png" Label="Vytvořit" Click="BtnTabPrehledyVytvorit_Click" />
				</r:RibbonGroup>
				<r:RibbonGroup x:Name="GrpFiltrovani" Header="Filtrování">
					<r:RibbonCheckBox x:Name="ChbFiltrovatAutomaticky" Label="filtrovat automaticky" IsChecked="True" />
					<r:RibbonCheckBox x:Name="ChbRozlisovatVelikostPismen" Label="rozlišovat velikost písmen" IsChecked="True" />
					<StackPanel Orientation="Horizontal">
						<r:RibbonTextBox x:Name="TxtHledanyText" Text="" />
						<r:RibbonButton x:Name="BtnHledat" Label="" SmallImageSource="Images\FindHS.png" Click="BtnHledat_Click" Margin="5,0,0,0" />
					</StackPanel>
				</r:RibbonGroup>
				<r:RibbonGroup x:Name="GrpFormat" Header="Formát">
					<r:RibbonComboBox x:Name="CmbVelikostTextu" Label="velikost" IsEditable="True" >
						<r:RibbonGallery x:Name="RbgVelikostTextu" SelectedValue="14" SelectedValuePath="Content" MaxColumnCount="1">
							<r:RibbonGalleryCategory>
								<r:RibbonGalleryItem Content="10"  />
								<r:RibbonGalleryItem Content="12" />
								<r:RibbonGalleryItem Content="14" />
								<r:RibbonGalleryItem Content="16" />
								<r:RibbonGalleryItem Content="18" />
								<r:RibbonGalleryItem Content="20" />
								<r:RibbonGalleryItem Content="22" />
							</r:RibbonGalleryCategory>
						</r:RibbonGallery>

					</r:RibbonComboBox>
				</r:RibbonGroup>
				<r:RibbonGroup x:Name="GrpExport" Header="Export" ></r:RibbonGroup>
			</r:RibbonTab>
			<r:RibbonTab x:Name="TabStatistiky" Header="Statistiky">
				<r:RibbonGroup x:Name="RbgTabStatistikySoubor" Header="Soubor">
					<r:RibbonButton x:Name="BtnVytvorit" LargeImageSource="Images\Novy_prehled_32x32.png"
													Label="Vytvořit" Click="BtnTabPrehledyVytvorit_Click"  />
				</r:RibbonGroup>
			</r:RibbonTab>
			<r:RibbonTab x:Name="RbtValidace" Header="Validace">
                <r:RibbonGroup x:Name="RbgTabValidaceSprava" Header="Správa">
                    <r:RibbonButton x:Name="BtnVaidovatAplikovat" LargeImageSource="Images\1532_Flag_system_red.png" Label="Vytvořit" Click="BtnVaidovatAplikovat_Click"  />
                </r:RibbonGroup>

            </r:RibbonTab>
		</r:Ribbon>
			<p:PrehledyStatistik Grid.Row="1" x:Name="PsPrehledy" SouborStatistik="..\Tests\AdamM.pjv" 
							 FiltrovatAutomaticky="{Binding ElementName=ChbFiltrovatAutomaticky, Path=IsChecked, Mode=TwoWay}"
							 RozlisovatVelikostPismen="{Binding ElementName=ChbRozlisovatVelikostPismen, Path=IsChecked, Mode=TwoWay}"
							 HledanyText="{Binding ElementName=TxtHledanyText, Path=Text, Mode=TwoWay}" 
							 VelikostTextu="{Binding ElementName=RbgVelikostTextu, Path=SelectedValue, Mode=TwoWay}">

		</p:PrehledyStatistik>
	</Grid>
</r:RibbonWindow>
